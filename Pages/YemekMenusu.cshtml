@page
@model KIVANC_WEB.Pages.YemekMenusuModel
@{
    ViewData["Title"] = "Yemek Menüsü";
}

<div class="text-center">
    <h1 class="display-4">Günün Menüsü</h1>
    <p>@DateTime.Today.ToString("dd MMMM yyyy, dddd")</p>
</div>

<hr />

@* 1. GÜNÜN MENÜSÜ BÖLÜMÜ *@
@* Model.GununMenusu değişkeni boş değilse bu bölümü göster *@
@if (Model.GununMenusu != null)
{
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">@Model.GununMenusu.Corba</h5>
                    <h3 class="card-subtitle mb-2 text-muted">@Model.GununMenusu.AnaYemek</h3>
                    <p class="card-text">@Model.GununMenusu.Tatli</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    @* Eğer günün menüsü boşsa, bir uyarı mesajı göster *@
    <div class="alert alert-warning text-center">
        Bugün için menü bilgisi girilmemiştir.
    </div>
}


<hr class="mt-5 mb-4" />

@* 2. HAFTALIK MENÜ BÖLÜMÜ *@
<div class="text-center">
    <h2 class="display-6">Haftalık Menü Planı</h2>
</div>

<table class="table table-striped table-bordered mt-4">
    <thead class="table-dark">
        <tr>
            <th>Tarih</th>
            <th>Çorba</th>
            <th>Ana Yemek</th>
            <th>Tatlı/Ekstra</th>
        </tr>
    </thead>
    <tbody>
        @* HaftalikMenu listesindeki her bir "menu" elemanı için bir satır oluştur *@
        @foreach (var menu in Model.HaftalikMenu)
        {
            <tr>
                @* Tarihi güzel bir formatta yazdırıyoruz. *@
                <td>@menu.Tarih.ToString("dd MMM, dddd")</td>
                <td>@menu.Corba</td>
                <td>@menu.AnaYemek</td>
                <td>@menu.Tatli</td>
            </tr>
        }
    </tbody>
</table>```
